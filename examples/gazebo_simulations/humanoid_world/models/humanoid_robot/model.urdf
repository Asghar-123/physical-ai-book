<?xml version="1.0"?>
<robot name="humanoid_robot">

  <!-- Base Link -->
  <link name="base_link">
    <visual>
      <geometry><box size="0.2 0.2 0.1"/></geometry>
      <material name="grey"><color rgba="0.7 0.7 0.7 1"/></material>
    </visual>
    <collision><geometry><box size="0.2 0.2 0.1"/></geometry></collision>
    <inertial>
      <mass value="5.0"/>
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/>
    </inertial>
  </link>

  <!-- Torso Link -->
  <link name="torso_link">
    <visual>
      <geometry><cylinder radius="0.1" length="0.3"/></geometry>
      <material name="blue"><color rgba="0.2 0.2 0.8 1"/></material>
    </visual>
    <collision><geometry><cylinder radius="0.1" length="0.3"/></geometry></collision>
    <inertial>
      <mass value="10.0"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>
  </link>

  <joint name="base_to_torso_joint" type="fixed">
    <parent link="base_link"/>
    <child link="torso_link"/>
    <origin xyz="0 0 0.2" rpy="0 0 0"/>
  </joint>

  <!-- Head Link -->
  <link name="head_link">
    <visual>
      <geometry><sphere radius="0.1"/></geometry>
      <material name="red"><color rgba="0.8 0.2 0.2 1"/></material>
    </visual>
    <collision><geometry><sphere radius="0.1"/></geometry></collision>
    <inertial>
      <mass value="2.0"/>
      <inertia ixx="0.005" ixy="0" ixz="0" iyy="0.005" iyz="0" izz="0.005"/>
    </inertial>
  </link>

  <joint name="torso_to_head_joint" type="revolute">
    <parent link="torso_link"/>
    <child link="head_link"/>
    <origin xyz="0 0 0.2" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-1.57" upper="1.57" effort="10" velocity="1"/>
  </joint>

  <!-- Left Leg - simplified -->
  <link name="left_thigh_link">
    <visual>
      <geometry><box size="0.05 0.05 0.2"/></geometry>
      <material name="green"><color rgba="0.2 0.8 0.2 1"/></material>
    </visual>
    <collision><geometry><box size="0.05 0.05 0.2"/></geometry></collision>
    <inertial>
      <mass value="3.0"/>
      <inertia ixx="0.005" ixy="0" ixz="0" iyy="0.005" iyz="0" izz="0.005"/>
    </inertial>
  </link>

  <joint name="torso_to_left_thigh_joint" type="revolute">
    <parent link="torso_link"/>
    <child link="left_thigh_link"/>
    <origin xyz="0 0.075 -0.1" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="-0.5" upper="0.5" effort="10" velocity="1"/>
  </joint>

  <!-- Right Leg - simplified -->
  <link name="right_thigh_link">
    <visual>
      <geometry><box size="0.05 0.05 0.2"/></geometry>
      <material name="green"/>
    </visual>
    <collision><geometry><box size="0.05 0.05 0.2"/></geometry></collision>
    <inertial>
      <mass value="3.0"/>
      <inertia ixx="0.005" ixy="0" ixz="0" iyy="0.005" iyz="0" izz="0.005"/>
    </inertial>
  </link>

  <joint name="torso_to_right_thigh_joint" type="revolute">
    <parent link="torso_link"/>
    <child link="right_thigh_link"/>
    <origin xyz="0 -0.075 -0.1" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="-0.5" upper="0.5" effort="10" velocity="1"/>
  </joint>

  <!-- Gazebo specific settings for colors -->
  <gazebo>
    <material name="grey">Gazebo/Grey</material>
    <material name="blue">Gazebo/Blue</material>
    <material name="red">Gazebo/Red</material>
    <material name="green">Gazebo/Green</material>
  </gazebo>

  <!-- Example Sensor: simple camera on head -->
  <gazebo reference="head_link">
    <sensor type="camera" name="head_camera">
      <always_on>true</always_on>
      <update_rate>30.0</update_rate>
      <camera>
        <horizontal_fov>1.047</horizontal_fov>
        <image>
          <width>640</width>
          <height>480</height>
          <format>R8G8B8</format>
        </image>
        <clip>
          <near>0.1</near>
          <far>10</far>
        </clip>
      </camera>
      <plugin name="camera_controller" filename="libgazebo_ros_camera.so">
        <ros>true</ros>
        <alwaysOn>true</alwaysOn>
        <updateRate>30.0</updateRate>
        <cameraName>head_camera</cameraName>
        <imageTopicName>image_raw</imageTopicName>
        <cameraInfoTopicName>camer-info</cameraInfoTopicName>
        <frameName>head_camera_link</frameName>
        <hackBaseline>0.07</hackBaseline>
      </plugin>
    </sensor>
  </gazebo>

</robot>
